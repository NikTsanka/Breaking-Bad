<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BigButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

    <style name="ShortButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/short_button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

    <style name="BackButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/ic_path_14</item>
        <item name="color">@color/black_200</item>
    </style>

    <style name="UsernameAndPasswordTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInput" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/black_200</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RegistrationTextTitleBottom" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black_200</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EmailSupport" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black_200</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="RegistrationTextBottom" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputField" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/black_700</item>
        <item name="android:minHeight">@dimen/input_pan_height</item>
        <item name="android:textAppearance">@style/TextInput</item>
        <item name="android:textColor">@color/black_200</item>
        <item name="android:textColorHint">@color/black_200</item>
        <item name="android:paddingStart">@dimen/input_field_padding</item>
        <item name="android:paddingEnd">@dimen/input_field_padding</item>
    </style>

    <style name="LanguageLogoutBtn" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="NameTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="UserNameTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="circleImageView">
        <item name="android:background">@color/black</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>